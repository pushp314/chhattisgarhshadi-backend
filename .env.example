# ============================================
# CHHATTISGARH SHAADI BACKEND - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and update with your actual values
# IMPORTANT: Never commit .env to version control!

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=8080

# ============================================
# DATABASE (PostgreSQL)
# ============================================
# Example: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/matrimony_db?sslmode=require

# ============================================
# JWT TOKENS (REQUIRED)
# ============================================
# Generate strong secrets: openssl rand -base64 32
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ============================================
# GOOGLE OAUTH (REQUIRED)
# ============================================
# Get from: https://console.cloud.google.com/apis/credentials
# For mobile OAuth: Use "Web application" or "Android/iOS" client type
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# AWS S3 (OPTIONAL - for cloud file storage)
# ============================================
# If not configured, file upload features will be disabled
# Get from: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-south-1
AWS_S3_BUCKET_NAME=

# ============================================
# SMS SERVICE (MSG91) - OPTIONAL
# ============================================
# If not configured, phone OTP verification will be disabled
# Get from: https://msg91.com/
MSG91_AUTH_KEY=
MSG91_SENDER_ID=CGSHAD
MSG91_TEMPLATE_ID=

# ============================================
# FIREBASE (OPTIONAL - for push notifications)
# ============================================
# If not configured, push notifications will be disabled
# Get from: Firebase Console -> Project Settings -> Service Accounts
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# ============================================
# RAZORPAY (OPTIONAL - for payments)
# ============================================
# If not configured, payment features will be disabled
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# ============================================
# CORS & SECURITY
# ============================================
# Comma-separated list of allowed origins
# Development: http://localhost:3000,http://localhost:8081
# Production: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGIN=*

# Frontend URL (for redirects and emails)
FRONTEND_URL=http://localhost:8081

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
# Maximum file sizes (in bytes)
MAX_FILE_SIZE=5242880
# Maximum profile photos per user
MAX_PROFILE_PHOTOS=5

# ============================================
# RATE LIMITING
# ============================================
# Requests per window (default: 100 requests per 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# LOGGING
# ============================================
# Options: error, warn, info, debug
LOG_LEVEL=info