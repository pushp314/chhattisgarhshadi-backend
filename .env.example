# ============================================
# CHHATTISGARH SHAADI BACKEND - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and update with your actual values
# IMPORTANT: Never commit .env to version control!

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=8080

# ============================================
# DATABASE (PostgreSQL)
# ============================================
# Example: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/matrimony_db?sslmode=require

# ============================================
# JWT TOKENS (REQUIRED)
# ============================================
# Generate strong secrets: openssl rand -base64 32
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ============================================
# GOOGLE OAUTH (REQUIRED FOR WEB-BASED OAUTH)
# ============================================
# Get from: https://console.cloud.google.com/apis/credentials
# Must use "Web application" client type
GOOGLE_CLIENT_ID=250704044564-q3ql66oruro0a17ipumla9cloda24tkk.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-client-secret-from-google-console

# Redirect URI Configuration:
# Development: http://localhost:8080/auth/google/callback
# Production: https://yourdomain.com/auth/google/callback
# IMPORTANT: Must match exactly with Google Console settings
GOOGLE_REDIRECT_URI=http://localhost:8080/auth/google/callback

# ============================================
# AWS S3 (OPTIONAL - for cloud file storage)
# ============================================
# Leave empty to use local filesystem storage
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=your-bucket-name

# ============================================
# SMS SERVICE (MSG91) - OPTIONAL
# ============================================
# Required for phone OTP verification
# Get from: https://msg91.com/
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_SENDER_ID=CGSHAD
MSG91_TEMPLATE_ID=your-template-id

# ============================================
# FIREBASE (OPTIONAL - for push notifications)
# ============================================
# Download service account JSON from Firebase Console
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# ============================================
# RAZORPAY (OPTIONAL - for payments)
# ============================================
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret

# ============================================
# CORS & SECURITY
# ============================================
# Comma-separated list of allowed origins
# Development: http://localhost:3000,http://localhost:8081
# Production: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGIN=*

# Frontend URL (for redirects and emails)
FRONTEND_URL=http://localhost:8081

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
# Maximum file sizes (in bytes)
MAX_FILE_SIZE=5242880
# Maximum profile photos per user
MAX_PROFILE_PHOTOS=5

# ============================================
# RATE LIMITING
# ============================================
# Requests per window (default: 100 requests per 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# LOGGING
# ============================================
# Options: error, warn, info, debug
LOG_LEVEL=info